@using MedBook.Models.ViewModels


@model List<DoctorVM>


@if (Model.Count == 0)
{
    @ViewBag.Error
}
            else
            {
                <h4>Список докторов</h4>
                <br />
                <table border="1">
                    <thead>
                        <tr>
                            <th class="text-header" style="width:max-content">ID</th><th class="text-header">First Name</th><th class="text-header">Last Name</th><th class="editors-header">Edit</th><th class="editors-header">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var d in Model)
                {
                    <tr>
                        <td class="text-content">@d.Id</td><td class="digit-content">@d.FName</td><td class="digit-content">@d.LName</td>
                        <td class="editors-content"><a asp-controller="Doctor" asp-action="Edit" asp-route-id="@d.Id">Edit</a></td>
                        <td class="editors-content"><a asp-controller="Doctor" asp-action="Remove" asp-route-id="@d.Id">Remove</a></td>
                    </tr>
                }
                    </tbody>
                </table>
            }

