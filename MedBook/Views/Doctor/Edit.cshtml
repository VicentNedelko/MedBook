@using MedBook.Models.ViewModels


@model DoctorVM

<h4>Doctor editing form</h4>
<form asp-controller="Doctor" asp-action="Edit" method="post">

    <p>Doctor ID : @Model.Id</p>
    <table>
        <tbody>
            <tr>
                <td class="text-label">Имя </td>
                <td><input asp-for="FName" placeholder="@Model.FName" class="form-control" /></td>
            </tr>
            <tr>
                <td class="text-label">Фамилия </td>
                <td><input asp-for="LName" placeholder="@Model.LName" class="form-control" /></td>
            </tr>
            <tr>
                <td class="text-label">Блокировка </td>
                <td>
                    <select id="isBlockSelector" class="form-control" onchange="GetUserBlockStatus()">
                        @if (Model.IsBlock)
                        {
                            <option selected value="1">Блокирован</option>
                            <option value="0">Разблокирован</option>
                        }
                        else
                        {
                            <option value="1">Блокирован</option>
                            <option selected value="0">Разблокирован</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Редактировать" class="btn btn-secondary mr-1" /><input type="button" class="btn btn-secondary" value="Назад" onclick="window.location.href='@Url.Action("ShowAll", "Doctor")'" /></td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" asp-for="IsBlock" id="isBlock" />
</form>

<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="warningToast">
  <div class="toast-body">
    Выполнить блокировку пользователя ?
    <div class="mt-2 pt-2 border-top">
      <button type="button" class="btn btn-primary btn-sm">Блокировать</button>
      <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="toast">Закрыть</button>
    </div>
  </div>
</div>
