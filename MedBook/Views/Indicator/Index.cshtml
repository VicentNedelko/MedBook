@{
}

@using MedBook.Models.ViewModels
@model IndicatorVM


<h4>Список показателей</h4>
<form asp-controller="Indicator" asp-action="FindIndicator">
    <div>
        <label>Найти показатель :</label>
        <input type="text" name="inputIndicator"/><br />
        <input type="submit" value="Найти"/>
    </div><br />
</form>
<form asp-controller="Indicator" asp-action="AddIndicator">
    <div>
        <label>Добавить новый показатель</label><br />
        <table border="0">
            <tbody>
                <tr>
                    <td>Наименование </td><td><input asp-for="Name" /></td>
                </tr>
                <tr>
                    <td>Ед. измерения</td><td><input asp-for="Unit"/></td>
                </tr>
            </tbody>
        </table>
        <label>Наименование :</label>
    </div>
    
</form>

<div>
    <table>
        <thead>
            <tr>
                <th>№</th><th>Наименование</th><th>Ед. изм.</th><th>Изменить</th><th>Удалить</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var ind in ViewBag.IndicatorList)
            {
                <tr>
                    <td></td><td>@ind.Name</td>
                    <td>@ind.Unit</td>
                    <td><a asp-controller="Indicator" asp-action="Edit" asp-route-id="@ind.Id">Edit</a></td>
                    <td><a asp-controller="Indicator" asp-action="Remove" asp-route-id="@ind.Id">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

