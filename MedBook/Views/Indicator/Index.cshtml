@using MedBook.Models.ViewModels
@using System.Linq;
@using System.Text.Json;
@using System.Text.Json.Serialization;
@model IndicatorVM


<h4>Показатели</h4>

<form asp-controller="Indicator" asp-action="FindIndicator" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#indicatorSearchList">
    <div id="findIndicator">
        <label class="label-header">Найти показатель :</label>
        <input type="text" name="inputIndicator" />
        <input type="submit" value="Найти" /><br />
    </div><br />

</form>

<div id="indicatorSearchList"></div>
<br />

<form asp-controller="Indicator" asp-action="AddIndicator" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <h4>Добавить новый показатель</h4>
        <table border="0">
            <tbody>
                <tr>
                    <td class="text-label">Базовый показатель </td>
                    <td>
                        <select id="bearingIndicatorId" onchange="FillInputs()">
                            <option selected disabled>Базовые показатели</option>
                            @foreach (var bearInd in ViewBag.BearingIndicatorList)
                            {
                                <option value="@JsonSerializer.Serialize(bearInd)">@bearInd.Name</option>
                            }
                        </select>
                    </td>

                </tr>
                <tr>
                    <td class="text-label">Наименование </td>
                    <td><input asp-for="Name" /></td>
                </tr>
                <tr>
                    <td class="text-label">Ед. измерения </td>
                    <td><input asp-for="Unit" id="indUnit" placeholder="" /></td>
                </tr>
                <tr>
                    <td class="text-label">Минимальное значение, ед. изм. </td>
                    <td><input asp-for="ReferentMin" id="indRefMin" /></td>
                </tr>
                <tr>
                    <td class="text-label">Максимальное значение, ед.изм. </td>
                    <td><input asp-for="ReferentMax" id="indRefMax" /></td>
                </tr>
                <tr>
                    <td><input hidden="hidden" asp-for="BearingIndicatorId" id="bearingId"/></td>
                    <td><input type="submit" value="Добавить" /></td>
                </tr>
            </tbody>
        </table><br />
    </div><br />
</form>

@if (ViewBag.SampleIndicatorList.Length != 0)
{
    <div>
        <h4>Общий перечень показателей</h4>
        <table border="1">
            <thead>
                <tr>
                    <th class="digit-header">№</th>
                    <th class="text-header">Наименование</th>
                    <th class="unit-header">Ед. изм.</th>
                    <th class="text-header">Базовый показатель</th>
                    <th class="editors-header">Изменить</th>
                    <th class="editors-header">Удалить</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var ind in ViewBag.SampleIndicatorList)
                {
                    string bearingName = string.Empty;
                    <tr>
                        @foreach(var bi in ViewBag.BearingIndicatorList)
                        {
                            if(bi.Id == ind.BearingIndicatorId)
                            {
                                bearingName = bi.Name;
                            }
                        }


                        <td class="digit-content">@i</td>
                        <td class="text-content">@ind.Name</td>
                        <td class="unit-content">@ind.Unit</td>
                        <td class="text-content">@bearingName</td>
                        <td class="editors-content"><a asp-controller="Indicator" asp-action="Edit" asp-route-id="@ind.Id">Edit</a></td>
                        <td class="editors-content"><a asp-controller="Indicator" asp-action="Remove" asp-route-id="@ind.Id">Remove</a></td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>

}
else
{
    <p>Список показателей пуст.</p>
}

<script src="~/js/site.js" type="text/javascript"></script>

