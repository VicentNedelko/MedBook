@{
}

@model MedBook.Models.ViewModels.IndicatorVM

<h4>Удалить показатель из базы данных</h4>
<form asp-controller="Indicator" asp-action="Remove">
    <table>
        <tr>
            <td>Наименование </td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Единицы измерения </td>
            <td>@Model.Unit</td>
        </tr>
        <tr>
            <td>Референсный максимум </td>
            <td>@Model.ReferentMax</td>
        </tr>
        <tr>
            <td>Референсный минимум </td>
            <td>@Model.ReferentMin</td>
        </tr>
    </table><br />
    <input type="submit" value="Удалить" class="btn btn-secondary"/>
    <input type="button" value="Отменить" onclick="location.href = '@Url.Action("Index", "Indicator")'" class="btn btn-secondary"/>

</form><br />

<script src="~/js/site.js"></script>
