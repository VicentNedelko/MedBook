@using MedBook.Models.ViewModels

@model List<PatientVM>

<h4>Список пациентов</h4><br />

@ViewBag.Message
@{

	if (Model != null)
	{
		<form asp-controller="Patient" asp-action="ShowMyPatients">
			<div asp-validation-summary="All"></div>
			<div>
				<table class="table table-hover w-auto">
					<thead class="table-light">
						<tr class="table-success">
							<th class="col-2">Фамилия</th>
							<th class="col-2">Имя</th>
							<th class="col-2">Возраст</th>
							<th class="col-2">Исследования</th>
							<th class="col-2">Показатели</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var patient in Model)
						{
							<tr>
							<td>@patient.LName</td>
							<td>@patient.FName</td>
							<td>@patient.Age</td>
							<td><a asp-controller="Patient" asp-action="ShowDetailes" asp-route-id="@patient.Id" asp-route-page="1">Исследования</a></td>
							<td><a asp-controller="Patient" asp-action="ShowIndicators" asp-route-id="@patient.Id">Показатели</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</form>
	}
}
