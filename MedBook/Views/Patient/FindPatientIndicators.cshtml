@using MedBook.Models.ViewModels

@model List<IndicatorVM>

@if (Model == null || Model.Count == 0)
{
    <p>Индикатор не найден</p>
}
else
{
    <h4>Список показателей</h4>
    <table class="table table-hover">
        <tbody>
            @foreach(var ind in Model)
            {
                <tr>
                    <td>@ind.Name</td><td><button class="btn btn-outline-info ml-1" onclick="window.open(
                                                '@Url.Action("ShowStatistics", "Patient", new {patientId = @ViewBag.PatientId, indicatorId = @ind.Id})',
                                                    '_blank')">Показать</button></td>
                </tr>
            }
        </tbody>
    </table>
}



