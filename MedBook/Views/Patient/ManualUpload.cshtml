@using MedBook.Models.ViewModels

@model ResearchVM

<form asp-controller="Patient" asp-action="ManualUpload" method="post">
    <div id="indicatorList"></div>
    <input type="submit" value="Сохранить" />
</form><br />
<div>
    <label>Name : </label><br />
    <input list="indicators" placeholder="Наименование"/><br />
    <datalist id="indicators">
        @foreach(var ind in ViewBag.Indicators)
            {
                <option>@ind.Name</option>
            }

    </datalist>
    <label>Value : </label><br />
    <input type="number" name="indicatorValue"/><label id="indicatorUnit"></label><br />
</div>
