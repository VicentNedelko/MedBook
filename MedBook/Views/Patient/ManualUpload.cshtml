@using MedBook.Models.ViewModels

@model ResearchVM

<form asp-controller="Patient" asp-action="AddManualIndicator">
    <div>
        @{
            if(Model.Items.Count != 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th class="text-header">Name</th><th class="digit-header">Value</th><th class="label-header">Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var ind in Model.Items)
                        {
                            <tr>
                                <td class="text-content">@ind.IndicatorName</td>
                                <td class="digit-content">@ind.IndicatorValue</td>
                                <td class="unit-content">@ind.IndicatorUnit</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
    </div>
    <input type="submit" value="Save"/>
</form>
<form>
    <div>
        <label>Name : </label><br />
        <input id="indInput" class="search-text" list="indicators" placeholder="Наименование" name="indicatorName"/><br />
        <datalist id="indicators">
            @foreach(var ind in ViewBag.Indicators)
                {
                    <option>@ind.Name</option>
                }

        </datalist>
        <input type="submit" value="Добавить"/>
        
    </div>
</form>

