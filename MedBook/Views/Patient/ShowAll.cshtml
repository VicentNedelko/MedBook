@{
}

@using MedBook.Models.ViewModels

@model List<PatientVM>

@if (Model.Count == 0)
{
    @ViewBag.Error
}
            else
            {
                <h4>Список пациентов</h4>
                <br />
                <table border="1">
                    <thead>
                        <tr>
                            <th class="text-header" style="width:max-content">ID</th><th class="text-header">First Name</th><th class="text-header">Last Name</th><th class="text-header-narrow">Age</th><th class="editors-header">Edit</th><th class="editors-header">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var p in Model)
                {
                    <tr>
                        <td class="text-content">@p.Id</td><td class="digit-content">@p.FName</td><td class="digit-content">@p.LName</td><td class="digit-content">@p.Age</td>
                        <td class="editors-content"><a asp-controller="Patient" asp-action="Edit" asp-route-id="@p.Id">Edit</a></td>
                        <td class="editors-content"><a asp-controller="PAtient" asp-action="Remove" asp-route-id="@p.Id">Remove</a></td>
                    </tr>
                }
                    </tbody>
                </table>
            }






