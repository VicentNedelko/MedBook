
@model MedBook.Models.ViewModels.LoginModel


@ViewBag.ErrorMessage
<form asp-controller="Registration" asp-action="Login">
    <div class="col-xl-3">
        <h4>Login to MedBook</h4>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="col-xl-3">
        <label asp-for="Email" class="col-form-label"></label><br />
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div><br />
    <div class="col-xl-3">
        <label asp-for="Password" class="col-form-label"></label><br />
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password"></span>

    </div><br />
    <div class="col-xl-1">
        <input type="submit" value="Login"/>
    </div>

</form>
